@using Pawn.Authorize;
<div id="InPhieuThu" class="hidden">

    <table style="width: 100%;margin: 10px;margin-left: 20px">
        <tr>
            <td>{{123|dateNow:'DD-MM-YYYY'}}</td>
            <td>Biên nhận đóng lãi</td>
        </tr>

        <tr><td colspan="2" style="text-align: center;"><b>CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM</b></td></tr>
        <tr><td colspan="2" style="text-align: center;">Độc Lập - Tự Do - Hạnh Phúc</td></tr>
        <tr><td colspan="2" style="text-align: center;">............o0o............</td></tr>
        <tr><td colspan="2" style="text-align: center;"><h1>BIÊN NHẬN ĐÓNG LÃI</h1></td></tr>
        <tr>
            <td colspan="2" style="text-align: center;">Số:{{pawnData.Code}}</td>
        </tr>
        <tr>
            <td colspan="2">Hôm nay, ngày {{123|dateCharacter:'normal'}}</td>
        </tr>
        <tr>
            <td colspan="2"><b>@RDAuthorize.Store.Name</b></td>
        </tr>
        <tr>
            <td colspan="2">Nhân viên <b>@RDAuthorize.Firstname  @RDAuthorize.Lastname</b> đã nhận tiền lãi của</td>
        </tr>
        <tr>
            <td colspan="2">Ông (Bà): <b>{{pawnData.CustomerName}}</b></td>
        </tr>
        <tr>
            <td colspan="2">Theo hợp đồng Số: <b>{{pawnData.Code}}</b></td>
        </tr>
        @*<tr><td colspan="2">  </b>của Kỳ <b>{{PayData.$index+1}}</b></td><tr>*@
        <tr>
            <td colspan="2">Kỳ lãi: từ ngày <b>{{PayData.FromDate|jsonDate:"dd-MM-yyyy"}}</b> đến ngày <b>{{PayData.ToDate|jsonDate:"dd-MM-yyyy"}}</b></td>
        </tr>
        <tr>
            <td colspan="2">Số tiền lãi: <b>{{PayData.CustomerMoney |currency:"":"0"}}</b></td>
        </tr>
        <tr>
            <td colspan="2">Theo đó, HĐ số : {{pawnData.Code}} ngày đóng lãi tiếp theo là : {{nextToDate}}</td>
        </tr>
        <tr><td colspan="2"><br/></td></tr>
        <tr>
            <td style="text-align:center">KHÁCH HÀNG</td>
            <td style="text-align:center">NGƯỜI CHO VAY</td>
        </tr>
    </table>

</div>